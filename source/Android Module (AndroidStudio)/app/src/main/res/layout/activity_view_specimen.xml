<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Viewspecimen.ViewSpecimen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/MushroomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MushroomName"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stage 3 - Pinning"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/diaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/stageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/alarmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/button_viewspecimen_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/holo_red_dark"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tempMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/tempMain"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/actualTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/tempMain"
                android:gravity="end|top"
                android:text="actualTemp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TempRange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:text="TemperatureRangeDifference"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="?android:attr/listDivider" />

        <androidx.cardview.widget.CardView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:id="@+id/humMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/humMain"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/actualHum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/tempMain"
                android:gravity="end|top"
                android:text="actualHum"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/humRange"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="bottom|end"
                android:text="HumidityRangeDifference"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="?android:attr/listDivider" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dioxide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:id="@+id/dioxideMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/dioxideMain"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/actualCO2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/tempMain"
                android:gravity="end|top"
                android:text="actualCO2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/co2Range"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="bottom|end"
                android:text="CO2RangeDifference"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="?android:attr/listDivider" />

        <androidx.cardview.widget.CardView
            android:id="@+id/light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:id="@+id/lightMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/lightMain"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/actualLight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/tempMain"
                android:gravity="end|top"
                android:text="actualLight"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lightRange"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="bottom|end"
                android:text="LightRangeDifference"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar"
        android:layout_width="411dp"
        android:layout_height="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>